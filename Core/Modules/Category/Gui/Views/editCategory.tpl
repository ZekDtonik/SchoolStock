<div class="row">
    <div class="col flex-10">
        <div class="box">
            <h1>_{:edit_category}</h1>
            <div class="separator"></div>
            <div class="pd-tb-1"></div>
            <form action="#" enctype="application/x-www-form-urlencoded" method="post" _{datasend}>
                <h3>_{:category_name}</h3>
                <div class="former">
                    <label for="name">_{:category_name}</label>
                    <input type="text" name="name" value="_{value}" placeholder="_{:category_name}">
                    <i class="ais ais-matterName"></i>
                </div>

                <div class="txt-right">
                    <a href="_{link_back}"><button class="bgGray ais-return" type="button">_{:return}</button></a>
                    <button class="ais-save">_{:update}</button>
                </div>
            </form>
        </div>
    </div>
</div>